
<p id="notice"><%= notice %></p>

<article class="message is-dark">
  <div class="message-header">
    <p>Eventos Cadastrados</p>
  </div>
 </article> 

  <div class="box">
   <div class="field is-horizontal">
     <%= search_form_for @q do |f| %>

     <div class="field-body">
       <div class="field">
         <label class="label">Nome</label>
         <div class="control">
           <%= f.search_field :name_cont,label: false ,class: 'input'%>
         </div>
       </div>
       <div class="field">
         <label class="label">Valor do Ingresso</label>
         <div class="control">
           <%= f.search_field :ticket_value_eq,label: false ,class: 'input'%>
         </div>
       </div>
       <div class="field">
         <label class="label">Endereço</label>
         <div class="control">
           <%= f.search_field :address_cont,label: false ,class: 'input'%>
         </div>
       </div>
       <div class="field">
         <label class="label">Numéro Max. de pessoas</label>
         <div class="control">
           <%= f.search_field :max_people_eq,label: false ,class: 'input'%>
         </div>
       </div>
     </div>
     <br>
   </div>
 </div>
  <div class="field is-horizontal">
    <div class="field-body">
      <div class="field">
        <div class="control">
          <%= f.submit class: "button is-primary" %>
        </div>
      </div>
    </div>
  </div>
 <% end %>
 <br>
 <div class="columns is-gapless is-multiline is-mobile">
  <%= paginate @events %>
</div>
<table class="table is-bordered is-striped is-narrow is-hoverable is-fullwidth">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Endereço</th>
      <th>Duração</th>
      <th>Número Máximo de pessoas</th>
      <th>Valor do Ingresso</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.address %></td>
        <td><%= event.duration_time.to_s(:time) %></td>
        <td><%= event.max_people %></td>
        <td><%= event.ticket_value %></td>
        <td>
        <%= render 'shared/action_links', object: event %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Evento', new_event_path ,class: "button is-info"%>


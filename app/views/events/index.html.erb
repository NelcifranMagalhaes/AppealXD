
<p id="notice"><%= notice %></p>

<article class="message is-dark">
  <div class="message-header">
    <p>Eventos Cadastrados</p>
  </div>
 </article> 

 <br>

<table class="table is-bordered is-striped is-narrow is-hoverable is-fullwidth">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Endereço</th>
      <th>Duração</th>
      <th>Número Máximo de pessoas</th>
      <th>Valor do Ingresso</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.address %></td>
        <td><%= event.duration_time.to_s(:time) %></td>
        <td><%= event.max_people %></td>
        <td><%= event.ticket_value %></td>
        <td>
        <%= render 'shared/action_links', object: event %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Evento', new_event_path ,class: "button is-info"%>


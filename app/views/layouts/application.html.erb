
<!DOCTYPE html>

<html lang="pt-br">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Appeal</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= favicon_link_tag 'event.ico', :rel => 'shortcut icon' %>

  </head>
  
  <body>
    <nav class="navbar">
         <div class="container">
             <div class="navbar-brand">
                <%= link_to events_path,class: "navbar-item" do%>
                      Evento Do Roshan
                    <% end %>

                    <a role="button" class="navbar-burger" data-target="navMenu" aria-label="menu" aria-expanded="false">
                      <span aria-hidden="true"></span>
                      <span aria-hidden="true"></span>
                      <span aria-hidden="true"></span>
                    </a>
             </div>
             <div class="navbar-menu" id="navMenu">
                 <div class="navbar-end">
                    <%= link_to("Eventos", events_path ,class: "navbar-item") %>
                    <% if current_user.present? %>
                      <%= link_to("Meu perfil", personas_path,class: "navbar-item") %>
                      <span class="navbar-item"><%=current_user.email %></span>
                        <div class="navbar-item has-dropdown is-hoverable">
                            <%= link_to('Sair'.html_safe,  destroy_user_session_path , method: 'delete',class: 'navbar-link')%>
                        </div>
                    <% end %>
                 </div>
             </div>
         </div>
    </nav>

    <div class="container">
        <div id="flow">
            <span class="flow-1"></span>
            <span class="flow-2"></span>
            <span class="flow-3"></span>
        </div>
        <div class="section">
              <%= yield %>
      </div>
    </div>

  </body>
</html>

<script type="text/javascript">
  $(document).ready(function() {

  // Check for click events on the navbar burger icon
  $(".navbar-burger").click(function() {

      // Toggle the "is-active" class on both the "navbar-burger" and the "navbar-menu"
      $(".navbar-burger").toggleClass("is-active");
      $(".navbar-menu").toggleClass("is-active");

  });
});

</script>

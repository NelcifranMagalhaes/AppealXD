<article class="message is-dark">
  <div class="message-header">
    <p>Cadastro</p>
</div>
 </article>

<div class="box">
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>
  <div class="field">
    <p class="control has-icons-left has-icons-right">
      <%= f.input :email,input_html: { class: 'input'}, required: true, autofocus: true ,placeholder:"Email"%>
      <span class="icon is-small is-left">
        <i class="fa fa-envelope"></i>
      </span>
    </p>
  </div>

  <div class="field">
    <p class="control has-icons-left">
      <%= f.input :password,input_html: { class: 'input'} ,placeholder: "Password", required: true %>
      <span class="icon is-small is-left">
        <i class="fa fa-lock"></i>
      </span>
    </p>
  </div>


  <div class="field">
    <p class="control has-icons-left">
      <%= f.input :password_confirmation,required: true,input_html: { class: 'input'} ,placeholder: "Password", required: true %>
      <span class="icon is-small is-left">
        <i class="fa fa-lock"></i>
      </span>
    </p>
  </div>
  <br></br>
    
    <div class="buttons">
      <%= f.button :submit, "Enviar" ,class: "button is-link"%>

      <%= link_to "JÃ¡ tem Cadastro", new_session_path(resource_name) ,class: "button"%><br />

    </div>

<% end %>
</div>
